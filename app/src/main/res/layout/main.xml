<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        ads:layout_constraintBottom_toBottomOf="@+id/container"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:layout_width="@dimen/play_buttons_size"
                android:layout_height="@dimen/play_buttons_size"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_oval">

                <ImageView

                    android:id="@+id/colorShape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/shape_oval" />

                <ImageView
                    android:id="@+id/show_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ads:srcCompat="@drawable/left_p" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/play_buttons_size"
                android:layout_height="@dimen/play_buttons_size"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_oval">

                <ImageView

                    android:id="@+id/colorShape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/shape_oval" />

                <ImageView
                    android:id="@+id/right_p"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ads:srcCompat="@drawable/right_p" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/play_buttons_size"
                android:layout_height="@dimen/play_buttons_size"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_oval">

                <ImageView

                    android:id="@+id/colorShape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/shape_oval" />

                <ImageView
                    android:id="@+id/play_p"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ads:srcCompat="@drawable/bt_play" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/play_buttons_size"
                android:layout_height="@dimen/play_buttons_size"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_oval">

                <ImageView

                    android:id="@+id/colorShape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/shape_oval" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ads:srcCompat="@drawable/random" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/play_buttons_size"
                android:layout_height="@dimen/play_buttons_size"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_oval">

                <ImageView

                    android:id="@+id/colorShape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/shape_oval" />

                <ImageView
                    android:id="@+id/melody_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ads:srcCompat="@drawable/list" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/play_buttons_size"
                android:layout_height="@dimen/play_buttons_size"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_oval">

                <ImageView

                    android:id="@+id/colorShape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/shape_oval" />

                <ImageView
                    android:id="@+id/play_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ads:srcCompat="@drawable/politic_button" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/name_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="authorName"
            android:textColor="#fff" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <!--        ads:layout_constraintTop_toBottomOf="@+id/adView" -->


</androidx.constraintlayout.widget.ConstraintLayout>